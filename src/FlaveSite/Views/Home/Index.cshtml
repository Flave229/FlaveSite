@using System.Collections.Generic
@using Microsoft.AspNetCore.Mvc.Rendering
@model List<FlaveSite.Core.Projects.Records.ProjectRecord>

<div class="header-background"></div>
<div class="header-profile-content">
    <div class="row" style="top: 50%">
        <div class="col-md-1"></div>
        <div class="col-md-10 header-profile">
            <div class="header-profile-image img-circle" style="padding-top: 190px">
                <br />
                <a href="https://github.com/Flave229" style="color: #fff"><i class="fa fa-github-square fa-2x"></i></a>
                <a href="https://www.linkedin.com/in/flave229/" style="color: #fff"><i class="fa fa-linkedin-square fa-2x"></i></a>
                <a href="https://twitter.com/Fire229" style="color: #fff"><i class="fa fa-twitter-square fa-2x"></i></a>
                <a href="https://www.instagram.com/flave229/" style="color: #fff"><i class="fa fa-instagram fa-2x"></i></a>
                <a href="https://www.facebook.com/Flave229" style="color: #fff"><i class="fa fa-facebook-square fa-2x"></i></a>
            </div>
            <span class="header-profile-title"> David Smith. Games Programmer. </span>  
        </div>
        <div class="col-md-1"></div>
    </div>
</div>
@Html.Partial("Navbar")


<div class="container body-content">
    <h2>@ViewData["Title"]</h2>
    
    @foreach (var project in Model)
    {
        <div class="row">
            <div class="col-md-12">
                <a href="@Url.Action("ProjectDetails", "Home", new { projectId = project.Id })">
                <div class="panel panel-primary admin-panel" style="background: url(@project.ImageUrl) no-repeat right top">
                    <h4 class="strokeme"> @project.Title</h4>
                    
                         @{
                             if (project.Date != null)
                             {
                                 <span class="strokeme">
                                     @(((DateTime)project.Date).ToString("dd/MM/yyyy"))
                                 </span>
                             }
                             else
                             {
                                <span class="strokeme">
                                    Ongoing
                                </span>
                             }
                        }
                </div>
                </a>
            </div>
        </div>
    }
</div>

@Html.Partial("MainFooter")