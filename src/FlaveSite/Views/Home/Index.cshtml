@using System.Collections.Generic
@using Microsoft.AspNetCore.Mvc.Rendering
@model List<FlaveSite.Core.Projects.Records.ProjectRecord>

<div class="header-background"></div>
<div class="header-profile-content">
    <div class="row" style="top: 50%">
        <div class="col-md-4"></div>
        <div class="col-md-4 header-profile">
            <div class="header-profile-image img-circle"></div>
            <span class="header-profile-title"> David Smith. Games Programmer. </span>  
        </div>
        <div class="col-md-4"></div>
    </div>
</div>
@Html.Partial("Navbar")


<div class="container body-content">
    <h2>@ViewData["Title"]</h2>
    
    @foreach (var project in Model)
    {
        <div class="row">
            <div class="col-md-12">
                <a href="@Url.Action("ProjectDetails", "Home", new { projectId = project.Id })">
                <div class="panel panel-primary admin-panel" style="background: url(@project.ImageUrl) no-repeat right top">
                    <h4 class="strokeme"> @project.Title</h4>
                    <span class="strokeme"> @project.Date.ToString("dd/MM/yyyy")</span>
                </div>
                </a>
            </div>
        </div>
    }
</div>

@Html.Partial("MainFooter")